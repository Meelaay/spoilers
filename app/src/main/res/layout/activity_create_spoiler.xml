<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateSpoiler">

    <EditText
        android:id="@+id/mySpoilerTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titre :"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/textcreatespoiler"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Spoilez votre histoire !"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/mySpoilerTitre"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        app:layout_constraintTop_toBottomOf="@+id/textcreatespoiler"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="316dp">

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="senddata"
            android:text="send"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="73dp" />


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="savedata"
            android:text="save"
            app:layout_constraintRight_toRightOf="parent"

            tools:layout_editor_absoluteY="73dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>